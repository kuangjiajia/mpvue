.containers   
  width 100vw
  padding-top 3.5vh
  overflow scroll
  color black
  background-color #fefefe
  .city 
    text-align center
    font-size 24px
  .weather
    text-align center
    font-size 15px
  .temperature
    text-align center
    font-size 50px    
    font-weight normal
  .date 
    display flex
    width 100vw
    margin-top 5vh
    list-style none 
    flex-flow wrap row
    z-index 100
    li 
      width 14.28vw
      height 13vh
      flex-flow wrap column 
      text-align center
      span 
        display block
        text-align center
      img 
        display block
        width 6vw
        height 6vw
        margin .5vw auto
  .echarts 
    height 50vh
    width 100vw
  .day-do
    position relative
    width 100vw   
    min-height 20vh